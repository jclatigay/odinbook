<div class="container">
  <div class="card shadow-sm mt-4">
    <div class="card-body">
      <%= turbo_frame_tag "comment_content_#{@comment.id}" do %>
        <%= form_with(model: [@comment.post, @comment], local: true) do |f| %>
          <div class="form-group mb-3">
            <%= f.text_area :content, class: "form-control", rows: 3 %>
          </div>

          <div class="d-flex gap-2 mb-3">
            <%= f.submit "Update Comment", class: "btn btn-success btn-sm" %>
            <%= link_to "Cancel", post_path(@comment.post), class: "btn btn-outline-secondary btn-sm" %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
