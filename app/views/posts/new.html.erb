<h1>New Post</h1>

<%= form_with model: @post, class: "mb-3" do |form| %>

  <% if @post.errors.any? %>
    <div class="alert alert-danger">
      <%= @post.errors.full_messages.join(", ") %>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.text_field :content, placeholder: "What's on your mind?", class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.submit "Create Post", class: "btn btn-primary" %>
  </div>

  <%= link_to "Cancel", posts_path, class: "btn btn-outline-secondary" %>
<% end %>
