<nav class="navbar navbar-expand-lg bg-body-tertiary shadow-sm">
  <div class="container">
    <%= link_to root_path, class: "navbar-brand fw-bold" do %>
      <i class="bi bi-camera-fill me-2"></i>Odinbook
    <% end %>
    
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav">
        <li class="nav-item">
          <%= link_to root_path, class: "nav-link" do %>
            <i class="bi bi-house-door me-1"></i>Home
          <% end %>
        </li>
      </ul>

      <ul class="navbar-nav ms-auto">
        <% if current_user %>
          <li class="nav-item">
            <%= link_to new_post_path, class: "nav-link" do %>
              <i class="bi bi-plus-circle me-1"></i>Create Post
            <% end %>
          </li>
          
          <li class="nav-item">
            <%= link_to user_path(current_user), class: "nav-link d-flex align-items-center" do %>
              <%= user_avatar(current_user, size: 24, css_class: "rounded-circle me-2") %>
              <%= current_user.email %>
            <% end %>
          </li>
          
          <li class="nav-item ms-2">
            <%= button_to destroy_user_session_path, method: :delete, class: "btn btn-outline-danger" do %>
              <i class="bi bi-box-arrow-right me-1"></i>Logout
            <% end %>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to new_user_registration_path, class: "nav-link" do %>
              <i class="bi bi-person-plus me-1"></i>Sign Up
            <% end %>
          </li>
          
          <li class="nav-item">
            <%= link_to new_user_session_path, class: "nav-link" do %>
              <i class="bi bi-box-arrow-in-right me-1"></i>Login
            <% end %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</nav>